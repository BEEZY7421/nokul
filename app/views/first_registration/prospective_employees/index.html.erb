<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.prospective_employees') %>
        <div class='card-header-actions'>
          <%= link_to_new(t('.new_prospective_employee'), %i[new prospective_employee]) %>
        </div>
      </div>
      <div class='card-body'>
        <%= render 'search' %>
        <table class='table table-responsive-sm table-striped'>
          <thead class='thead-dark'>
            <tr>
              <th><%= t('.id_number') %></th>
              <th><%= t('.staff_number') %></th>
              <th><%= t('.title') %></th>
              <th><%= t('.first_name') %></th>
              <th><%= t('.last_name') %></th>
              <th><%= t('.unit') %></th>
              <th><%= t('.email') %></th>
              <th><%= t('.gender') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @prospective_employees.each do |prospective_employee| %>
              <tr>
                <td><%= prospective_employee.id_number %></td>
                <td><%= prospective_employee.staff_number %></td>
                <td><%= prospective_employee.title_name %></td>
                <td><%= prospective_employee.first_name %></td>
                <td><%= prospective_employee.last_name %></td>
                <td><%= prospective_employee.unit.names_depth_cache %></td>
                <td><%= prospective_employee.email %></td>
                <td><%= enum_t(prospective_employee, :gender) %></td>
                <td>
                  <%= link_to_actions(prospective_employee, except: :show) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
