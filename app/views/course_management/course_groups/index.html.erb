<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'tags', text: t('.card_header') %>
        <div class='card-header-actions'>
          <%= link_to_new t('.new_course_group_link'), new_course_group_path %>
        </div>
      </div>
      <div class='card-body'>
        <%= render 'search' %>
        <table class='table table-responsive-sm table-striped'>
          <thead>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.total_ects_condition') %></th>
              <th><%= t('.unit') %></th>
              <th><%= t('.course_group_type') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @course_groups.each do |course_group| %>
              <tr>
                <td><%= course_group.name %></td>
                <td><%= course_group.total_ects_condition %></td>
                <td><%= course_group.unit.try(:names_depth_cache) %></td>
                <td><%= course_group.course_group_type.try(:name) %></td>
                <td><%= link_to_actions(course_group) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
