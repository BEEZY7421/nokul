<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.curriculums') %>
        <div class='card-header-actions'>
          <%= link_to_new t('.add_new_curriculum'), new_curriculum_path %>
        </div>
      </div>
      <div class='card-body'>
        <%= render 'search' %>
        <table class='table table-responsive-sm table-striped table-hover'>
          <thead class='thead-dark'>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.unit') %></th>
              <th><%= t('.semesters_count') %></th>
              <th><%= t('.status') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @curriculums.each do |curriculum| %>
              <tr class="<%= curriculum.active? ? '' : 'table-warning' %>">
                <td><%= link_to curriculum.name, curriculum %></td>
                <td><%= curriculum.unit.try(:names_depth_cache) %></td>
                <td><%= curriculum.semesters_count %></td>
                <td><%= enum_t(curriculum, :status) %></td>
                <td><%= link_to_actions(curriculum) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <nav aria-label="pagination">
          <ul class="pagination justify-content-center">
            <%== pagy_bootstrap_nav(@pagy) %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
