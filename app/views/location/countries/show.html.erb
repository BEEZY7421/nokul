<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-header">
        <%= fa_icon 'globe' %><strong><%= @country.name %></strong>
        <div class="card-header-actions">
          <%= link_to_actions(@country, except: :show) %>
        </div>
      </div>

      <div class="card-body">
        <table class="table table-responsive-sm">
          <tbody>
            <tr>
              <td><%= t('activerecord.attributes.country.name') %></td>
              <td><%= @country.name %></td>
              <td><%= t('.continent') %> / <%= t('.world_region') %></td>
              <td><%= @country.continent %> / <%= @country.world_region %></td>
            </tr>
            <tr>
              <td><%= t('.region') %> / <%= t('.subregion') %></td>
              <td><%= @country.region %> / <%= @country.subregion %></td>
              <td><%= t('.start_of_week') %></td>
              <td><%= @country.start_of_week %></td>
            </tr>
            <tr>
              <td><%= t('.alpha_2_code') %></td>
              <td><%= @country.alpha_2_code %></td>
              <td><%= t('.alpha_3_code') %></td>
              <td><%= @country.alpha_3_code %></td>
            </tr>
            <tr>
              <td><%= t('.numeric_code') %></td>
              <td><%= @country.numeric_code %></td>
              <td><%= t('.mernis_code') %></td>
              <td><%= @country.mernis_code %></td>
            </tr>
            <tr>
              <td><%= t('.yoksis_code') %></td>
              <td><%= @country.yoksis_code %></td>
              <td><%= t('.currency_code') %></td>
              <td><%= @country.currency_code %></td>
            </tr>
            <tr>
              <td><%= t('.phone_code') %></td>
              <td><%= @country.phone_code %></td>
              <td><%= t('.un_locode') %></td>
              <td><%= @country.un_locode %></td>
            </tr>
            <tr>
              <td><%= t('.latitude') %></td>
              <td><%= @country.latitude %></td>
              <td><%= t('.longitude') %></td>
              <td><%= @country.longitude %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'street-view', text: t('.card_header') %>
        <div class="card-header-actions">
          <%= link_to_new t('.new_city_link'), [:new, @country, 'city'] %>
        </div>
      </div>
      <div class='card-body'>
        <%= render 'layouts/shared/smart_search_form',
                   path: @country,
                   placeholder: t('.name') %>
        <% if @country.cities.any? %>
          <table class='table table-striped table-responsive-sm'>
            <thead class="thead-dark">
              <tr>
                <th><%= t('.name') %></th>
                <th><%= t('.alpha_2_code') %></th>
                <th><%= t('actions') %></th>
              </tr>
            </thead>
            <tbody>
              <% @cities.each do |city| %>
                <tr>
                  <td><%= city.name %></td>
                  <td><%= city.alpha_2_code %></td>
                  <td><%= link_to_actions([@country, city]) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>

    <nav aria-label="pagination">
      <ul class="pagination justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
