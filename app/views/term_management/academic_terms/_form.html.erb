<%= render 'layouts/builders/form',
           namespace: nil,
           klass: @academic_term,
           params: [
             {
               field: 'year',
               width: 6,
               required: true,
               collection: selectible_year_range(1975)
             },
             {
               field: 'term',
               width: 6,
               required: true,
               collection: enum_options_for_select(AcademicTerm, :term)
             },
             {
               field: 'start_of_term',
               width: 6,
               required: true,
               as: :date_time_picker
             },
             {
               field: 'end_of_term',
               width: 6,
               required: true,
               as: :date_time_picker
             },
             {
               field: 'active',
               width: 12
             }
           ] %>

<script type="text/javascript">
  flatpickr(".datetimepicker", { enableTime: true, altInput: true })
</script>
