<%= action_bar do %>
  <%= link_to_back patron_query_stores_path %>
  <%= link_to_edit [:edit, @query_store] %>
  <%= link_to fa_icon('search', text: t('preview')),
              [:preview, @query_store],
              class: 'btn btn-outline-info btn-sm' %>
<% end %>

<div class="alert alert-light" role="alert">
  <h3 class='text-center'>
    <%= @query_store.name %>
  </h3>
  <hr>
  <h5 class='text-center'>
    <p><%= t('.type') %>: </p>
    <% if @query_store.include? %>
      <%= fa_icon('plus', text: enum_t(@query_store, :type), class: 'text-success') %>
    <% else %>
      <%= fa_icon('minus', text: enum_t(@query_store, :type), class: 'text-danger') %>
    <% end %>
  </h5>
</div>

<div class="row">
  <% @query_store.scope_klass.filters.each do |attribute, option| %>
    <div class="col-sm-6">
      <div class="card mb-3">
        <div class="card-header">
          <%= Patron::Utils::I18n.translate_filter(option.i18n_key, class_name: @query_store.scope_klass.model) %>
          <strong>( <%= attribute %> ) </strong>
        </div>

        <div class="card-body">
          <table class="table table-striped">
            <tr class="table-success">
              <th width="40%">
                <%= Patron::Utils::I18n.translate_suffix('value') %>
              </th>
              <td>
                <%= @query_store.public_send("#{attribute}_value") %>
              </td>
            </tr>
            <tr class="table-primary">
              <th>
                <%= Patron::Utils::I18n.translate_suffix('query_type') %>
              </th>
              <td>
                <%= Patron::Utils::I18n.translate_query_type(@query_store.public_send("#{attribute}_query_type")) %>
              </td>
            </tr>
            <tr class="table-secondary">
              <th>
                <%= Patron::Utils::I18n.translate_suffix('skip_empty') %>
              </th>
              <td>
                <%= Patron::Utils::I18n.translate_skip_empty(@query_store.public_send("#{attribute}_skip_empty")) %>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <h5 class="card-header">
        <%= t('.users') %>
      </h5>
      <div class="card-body">
        <%= render 'layouts/shared/smart_search_form',
                   path:        patron_query_store_path(@query_store),
                   placeholder: t('.smart_search_placeholder') %>
        <%= render 'patron/components/users',
                   users:           @users,
                   actions_visible: false %>
      </div>
      <nav aria-label='pagination'>
        <ul class='pagination justify-content-center'>
          <%== pagy_bootstrap_nav(@pagy) %>
        </ul>
      </nav>
    </div>
  </div>
</div>
