<%= action_bar do %>
  <%= link_to_back :back %>
<% end %>

<div class="card">
  <h5 class="card-header">
    <%= @permission.name %>
  </h5>
  <div class="card-body">
    <p>
      <strong><%= t('.identifier') %>:</strong> <%= @permission.identifier %>
    </p>
    <p>
      <strong><%= t('.description') %>:</strong> <%= @permission.description %>
    </p>
  </div>
</div>

<%= render 'layouts/shared/smart_search_form',
           path: patron_permission_path(@permission),
           placeholder: t('.smart_search_placeholder') %>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <h5 class="card-header">
        <%= t('.roles') %>
      </h5>
      <div class="card-body">
        <%= render 'patron/components/roles',
                   roles: @roles,
                   actions_visible: false %>
      </div>

      <nav aria-label='pagination'>
        <ul class='pagination justify-content-center'>
          <%== pagy_bootstrap_nav(@pagy_roles) %>
        </ul>
      </nav>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card">
      <h5 class="card-header">
        <%= t('.users') %>
      </h5>
      <div class="card-body">
        <%= render 'patron/components/users',
                   users: @users,
                   actions_visible: false %>
      </div>
      <nav aria-label='pagination'>
        <ul class='pagination justify-content-center'>
          <%== pagy_bootstrap_nav(@pagy_users) %>
        </ul>
      </nav>
    </div>
  </div>
</div>
