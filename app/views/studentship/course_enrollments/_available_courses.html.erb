  <table class="table table-responsive-sm table-striped table-hover">
    <thead>
      <tr class="thead-dark">
        <th><%= t('.code') %></th>
        <th><%= t('.name') %></th>
        <th><%= t('.type') %></th>
        <th><%= t('.credit') %></th>
        <th><%= t('.ects') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <% courses.each do |available_course| %>
        <tr>
          <td><%= available_course.code %></td>
          <td><%= available_course.name %></td>
          <td><%= enum_t(available_course.curriculum_course, :type) %></td>
          <td><%= available_course.credit %></td>
          <td><%= available_course.ects %></td>
          <td><%= link_to(t('.add'), course_enrollments_path(available_course_id: available_course.id), method: :post, class: 'btn btn-sm btn-success') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
