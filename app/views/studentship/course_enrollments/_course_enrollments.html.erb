<table class="table table-responsive-sm table-striped table-hover">
  <thead>
    <tr class="thead-dark">
      <th><%= t('.code') %></th>
      <th><%= t('.name') %></th>
      <th><%= t('.type') %></th>
      <th><%= t('.credit') %></th>
      <th><%= t('.ects') %></th>
      <th><%= t('actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% courses.each do |course_enrollment, dropable, info| %>
      <tr>
        <% available_course = course_enrollment.available_course %>
        <td><%= available_course.code %></td>
        <td><%= available_course.name %></td>
        <td><%= enum_t(available_course.curriculum_course, :type) %></td>
        <td><%= available_course.credit %></td>
        <td><%= available_course.ects %></td>
        <td>
          <% if dropable %>
            <%= link_to(t('.drop'), course_enrollment_path(course_enrollment, student_id: @student.id), method: :delete, class: 'btn btn-sm btn-outline-danger') %>
          <% else%>
            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="<%= info %>">
              <button class="btn btn-sm btn-outline-secondary" style="pointer-events: none;" type="button" disabled><%= t('.drop') %></button>
            </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
