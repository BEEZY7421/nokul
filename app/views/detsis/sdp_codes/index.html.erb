<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <%= render 'search' %>
        <table class='table table-responsive-sm table-striped'>
          <thead class="thead-dark">
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.main') %></th>
              <th><%= t('.first') %></th>
              <th><%= t('.second') %></th>
              <th><%= t('.third') %></th>
              <th><%= t('.full_code') %></th>
            </tr>
          </thead>
          <tbody>
            <% @sdp_codes.each do |code| %>
              <tr>
                <td><%= code.name %></td>
                <td><%= code.main %></td>
                <td><%= code.first %></td>
                <td><%= code.second %></td>
                <td><%= code.third %></td>
                <td><%= code.full_code %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
