<div id="chart-for-maps"></div>

<script type="text/javascript">
  Highcharts.mapChart('chart-for-maps', {
    chart: {
      map: 'countries/tr/tr-all',
      height: 600
    },
    title: {
      text: "<%= t('.title') %>"
    },
    mapNavigation: {
      enabled: true,
      buttonOptions: {
          verticalAlign: 'bottom'
      }
    },
    colorAxis: {
        min: 0
    },
    series: [{
      data: <%= sanitize(@series) %>,
      joinBy: 'name',
      states: {
        hover: {
          color: '#BADA55'
        }
      },
      dataLabels: {
        enabled: true,
        format: '{point.name}'
      },
      tooltip: {
        headerFormat: '',
        pointFormat: `
          <strong>{point.name}</strong><br/>
          <p style="color: #96d1c7; font-weight: bold;"><%= t('.male') %>: {point.male}<p/><br/>
          <p style="color: #fc7978; font-weight: bold;"><%= t('.female') %>: {point.female}</p><br/>
          <p style="color: #626262; font-weight: bold;"><%= t('.total') %>: {point.value}</p><br/>
        `
      }
    }]
  });

  $('.highcharts-credits').html('')
</script>
