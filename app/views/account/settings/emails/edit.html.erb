<div class='row'>
  <div class='col-sm-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'key' %>
        <strong><%= t('.update_email') %></strong>
      </div>
      <div class='card-body'>
        <%= simple_form_for(@user, as: :user, url: settings_emails_path, html: { method: :put }) do |f| %>
          <div class='row'>
            <div class='form-group col-sm-12'>
              <%= f.error_notification %>
            </div>
            <div class='form-group col-sm-12'>
              <%= f.input :email, autofocus: true %>
            </div>
            <div class='form-group col-sm-12'>
              <%= f.input :current_password, label: t('.current_password'), required: true, placeholder: false %>
            </div>
            <div class='form-group col-sm-12'>
              <%= f.button :submit, class: 'btn btn-outline-success btn-sm' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class='card-footer'>
        <%= link_to_back(:back) %>
      </div>
    </div>
  </div>
</div>
