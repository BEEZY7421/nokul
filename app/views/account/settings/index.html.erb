<h2><%= t('.access_and_security') %></h2>
<hr />
<div class='row'>
  <div class='container-fluid'>
    <div class='card border-light bg-transparent'>
      <div class='card-body'>
        <%= link_to t('action_group.update'), settings_emails_path, class: 'pull-right' %>
        <h5><%= t('.email') %></h5>
        <small class='text-muted pull-right'><%= current_user.email %></small>
        <small class='text-muted'><%= t('.updating_email') %></small>
      </div>
    </div>
    <hr />
    <div class='card border-light bg-transparent'>
      <div class='card-body'>
        <%= link_to t('action_group.update'), settings_phones_path, class: 'pull-right' %>
        <h5><%= t('.mobile_phone') %></h5>
        <small class='text-muted pull-right'><%= current_user.mobile_phone %></small>
        <small class='text-muted'><%= t('.updating_mobile_phone') %></small>
      </div>
    </div>
    <hr />
    <div class='card border-light bg-transparent'>
      <div class='card-body'>
        <%= link_to t('action_group.update'), settings_passwords_path, class: 'pull-right' %>
        <h5><%= t('.change_password') %></h5>
        <small class='text-muted'><%= t('.set_password') %></small>
      </div>
    </div>
  </div>
</div>
