<script type='text/javascript'>
  $(document).ready(function() {
    flatpickr.localize(flatpickr.l10ns["<%= I18n.locale %>"])
    flatpickr('.datetimepicker', { altInput: true })

    $('#activation_country').select2();

    configure_disabled_params()

    function configure_disabled_params() {
      if ($('#activation_serial').val().length || $('#activation_serial_no').val().length) {
        $('#activation_document_no').prop('disabled', true)
        $("label[for='activation_document_no']").addClass('text-muted')
      }
      if ($('#activation_document_no').val().length) {
        $('#activation_serial, #activation_serial_no').prop('disabled', true)
        $("label[for='activation_serial'], label[for='activation_serial_no']").addClass('text-muted')
        $('#span_serial, #span_serial_no').addClass('text-muted')
      }
    };

    $('#activation_serial, #activation_serial_no').on('input', function() {
       if($('#activation_serial').val().length || $('#activation_serial_no').val().length) {
         $('#activation_document_no').prop('disabled', true)
         $("label[for='activation_document_no']").addClass('text-muted')
       } else {
         $('#activation_document_no').prop('disabled', false)
         $("label[for='activation_document_no']").removeClass('text-muted')
       }
    });

    $('#activation_document_no').on('input', function() {
       if($(this).val().length) {
         $('#activation_serial, #activation_serial_no').prop('disabled', true)
         $("label[for='activation_serial'], label[for='activation_serial_no']").addClass('text-muted')
         $('#span_serial, #span_serial_no').addClass('text-muted')

       } else {
         $('#activation_serial, #activation_serial_no').prop('disabled', false)
         $("label[for='activation_serial'], label[for='activation_serial_no']").removeClass('text-muted')
         $('#span_serial, #span_serial_no').removeClass('text-muted')
       }
    });
  })
</script>
