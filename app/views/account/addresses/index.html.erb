<div class="alert alert-light">
  <%= link_to_new(t('.new_address'), new_address_path) unless current_user.addresses.informal.present? %>
  <%= link_to (@addresses.formal.present? ? t('.update_from_mernis') :  t('.create_from_mernis') ), save_from_mernis_addresses_path, class: "btn btn-outline-primary btn-sm"  %>
</div>

<div class="row">
  <% @addresses.each do |address| %>
    <div class="col-sm-12">
      <div class="card">
        <div class="card-header">
          <%= fa_icon('address-book-o') %>
          <% if address.formal? %>
            <strong><%= t('.formal_address') %></strong>
          <% else %>
            <strong><%= t('.informal_address') %></strong>
            <div class="card-header-actions">
              <%= link_to_edit(edit_address_path(address)) %>
              <%= link_to_destroy(address_path(address)) %>
            </div>
          <% end %>
        </div>
        <div class="card-body">
          <table class='table table-responsive-sm'>
            <% unless address.formal? %>
              <tr>
                <th width="15%"><%= t('.phone_number') %></td>
                <td><%= address.phone_number %></td>
              </tr>
            <% end %>
            <tr>
              <th width="15%"><%= t('.full_address') %></td>
              <td><%= address.full_address %></td>
            </tr>
            <tr>
              <th width="15%"><%= t('.district_and_city') %></td>
              <td><%= address.district.name %> / <%= address.district.city.name %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
