<div class='row'>
  <div class='col-sm-12'>
    <div class='card bg-transparent'>
      <div class='card-body'>
        <div class='row'>
          <div class='col-sm-1'>
            <% if current_user.avatar.attached? && current_user.avatar.variable? %>
              <%= image_tag current_user.avatar.variant(resize_to_limit: [150, 150]) %>
            <% else %>
              <%= image_tag 'profile/avatar_placeholder.svg', width: '150px' %>
            <% end %>
            <hr />
          </div>
          <div class='col-sm-4'>
            <h4><%= "#{current_user.identities.first&.first_name} #{current_user.identities.first&.last_name}" %></h4><br />
            <%= current_user.mobile_phone %><br />
            <%= current_user.email %><br />
            <%= link_to fa_icon('linkedin'), current_user.linkedin %>
            <%= link_to fa_icon('skype'), current_user.skype %>
            <%= link_to fa_icon('twitter-square'), current_user.twitter %>
          </div>
        </div>
        <div class='col-sm-12'>
          <h2><%= t('.professional_experience') %></h2><br />
          <ul class='list-group list-group-flush'>
            <div class='row'>
              <div class='col-sm-12'>
                <%= link_to (current_user.academic_credentials.exists? ? t('.update_academic_credentials_from_yoksis') : t('.create_academic_credentials_from_yoksis')),
                            save_academic_credentials_from_yoksis_path,
                            class: 'btn btn-secondary btn-sm pull-right' %>
                <h4><%= t('.academic') %></h4>
                <% current_user.academic_credentials.order(start_year: :desc).each do |credential| %>
                  <li class='list-group-item bg-transparent'><%= user_academic_credentials(credential) %></li>
                <% end %>
              </div>
            </div>
          </ul>
          <br />
          <h2><%= t('.academic_activities') %></h2><br />
          <div class='list-group list-group-flush'>
            <div class='row'>
              <div class='col-sm-12'>
                <%= link_to (current_user.articles.exists? ? t('.update_articles_from_yoksis') : t('.create_articles_from_yoksis')),
                            save_articles_from_yoksis_path,
                            class: 'btn btn-secondary btn-sm pull-right' %>
                <h4><%= t('.articles') %></h4>
                <% current_user.articles.last(10).each do |article| %>
                  <small><li class='list-group-item bg-transparent'><%= apa_citation(article) %></li></small>
                <% end %>
              </div>
            </div>
            <br />
            <div class='row'>
              <div class='col-sm-12'>
                <%= link_to (current_user.projects.exists? ? t('.update_projects_from_yoksis') : t('.create_projects_from_yoksis')),
                            save_projects_from_yoksis_path,
                            class: 'btn btn-secondary btn-sm pull-right' %>
                <h4><%= t('.projects') %></h4>
                <% current_user.projects.each do |project| %>
                  <small><li class='list-group-item bg-transparent'><%= user_projects(project) %></li></small>
                <% end %>
              </div>
            </div>
            <br />
            <div class='row'>
              <div class='col-sm-12'>
                <%= link_to (current_user.certifications.exists? ? t('.update_certifications_from_yoksis') : t('.create_certifications_from_yoksis')),
                            save_certifications_from_yoksis_path,
                            class: 'btn btn-secondary btn-sm pull-right' %>
                <h4><%= t('.certifications') %></h4>
                <% current_user.certifications.each do |certificate| %>
                  <small><li class='list-group-item bg-transparent'><%= user_certifications(certificate) %></li></small>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
