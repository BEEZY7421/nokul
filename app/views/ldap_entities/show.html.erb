<div class='row'>
  <div class='col-lg-12'>
    <div class="card">
      <div class="card-header">
        <%= fa_icon 'university' %><strong><%= 'Foo' %></strong>
      </div>

      <div class="card-body">
        <table class="table table-bordered table-hover">
          <tbody>
            <tr>
              <th><%= "t('.abbreviation')" %></th>
              <td><%= @entity.dn %></td>
            </tr>
            <% Ldap::Entity.attributes.each do |attribute| %>
              <tr>
                <th><%= attribute %></th>
                <td>
                  <% if attribute == 'jpegPhoto' %>
                    <%= image_tag("data:image/png;base64,#{@entity.public_send(attribute)}") %>
                  <% else %>
                    <%= to_list_group(@entity.public_send(attribute)) %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

