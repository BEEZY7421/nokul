<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: "t('.card_header')" %>
      </div>
      <div class='card-body'>
        <table class='table table-responsive-sm table-sm'>
          <thead>
            <tr>
              <th><%= "t('.name')" %></th>
              <th><%= "t('.abbreviation')" %></th>
              <th><%= "t('.unit_type')" %></th>
              <th><%= "t('.unit_status')" %></th>
              <th><%= "t('.unit_instruction_type')" %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @entities.each do |entity| %>
              <tr>
                <td><%= entity.user.id_number %></td>
                <td><%= entity.dn %></td>
                <td>
                  <span class='badge badge-<%= klass_for_status(entity.status) %>'>
                    <%= entity.status %>
                  </span>
                </td>
                <td><%= entity.synchronized_at %></td>
                <td><%= link_to_show(entity) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
