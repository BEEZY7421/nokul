<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
        <div class='card-header-actions'>
          <%= link_to_new(t('.new_standard_link'), new_standard_path) %>
        </div>
      </div>
      <div class='card-body'>
        <table class='table table-responsive-sm table-sm'>
          <thead>
            <tr>
              <th><%= t('.accreditation_standard') %></th>
              <th><%= t('.units') %></th>
              <th><%= t('.status') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @standards.each do |standard| %>
              <tr>
                <td><%= standard.name %></td>
                <td style='width: 60%'><%= standard.units.map(&:names_depth_cache).join(', ') %></td>
                <td><%= enum_t(standard, :status) %></td>
                <td><%= link_to_actions(standard) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
