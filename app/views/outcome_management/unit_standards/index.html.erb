<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
        <div class='card-header-actions'>
          <%= link_to_new(t('.new_unit_standard_link'), new_unit_standard_path) %>
        </div>
      </div>
      <div class='card-body'>
        <table class='table table-responsive-sm table-sm'>
          <thead>
            <tr>
              <th><%= t('.standard') %></th>
              <th><%= t('.unit') %></th>
              <th><%= t('.status') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @unit_standards.each do |unit_standard| %>
              <% unit = unit_standard.unit %>

              <tr>
                <td><%= unit_standard.standard.name %></td>
                <td><%= link_to(unit.names_depth_cache, unit_path(unit)) %></td>
                <td><%= enum_t(unit_standard, :status) %></td>
                <td><%= link_to_actions(unit_standard) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
